# SalesBreachPro Configuration
# =================================
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# Database Configuration
DATABASE_URL=sqlite:///data/app.db

# FlawTrack API v2.0 Configuration
FLAWTRACK_API_TOKEN=your-flawtrack-api-token
FLAWTRACK_API_ENDPOINT=http://35.222.85.196:4747

# Configuration
FLAWTRACK_TIMEOUT=30
FLAWTRACK_RETRY_COUNT=3
FLAWTRACK_RATE_LIMIT_PER_MINUTE=60
FLAWTRACK_SCANNING_ENABLED=true
FLAWTRACK_SEARCH_TYPE=domain
FLAWTRACK_DATA_SOURCE=unified
FLAWTRACK_HEALTH_CHECK_INTERVAL=300

# EmailListVerify Email Validation Service
EMAILLISTVERIFY_API_KEY=your-emaillistverify-api-key
EMAILLISTVERIFY_ENABLED=true

# Brevo (SendinBlue) Email Service Configuration
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=your-email@domain.com
BREVO_SENDER_NAME=Your Name
BREVO_SUBJECT_PREFIX=[Security Alert]
BREVO_WEBHOOK_URL=https://yourdomain.com/webhooks/brevo
BREVO_WEBHOOK_SECRET=your-webhook-secret

# Company Configuration
COMPANY_NAME=Your Company

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB file upload limit
UPLOAD_FOLDER=uploads
LOG_LEVEL=INFO

# Rate Limiting
DAILY_EMAIL_LIMIT=1000
HOURLY_EMAIL_LIMIT=100
MAX_CONTACTS_PER_UPLOAD=10000

# EMERGENCY CONFIGURATION - DISABLE ALL EMAIL SENDING
EMAIL_SENDING_DISABLED=false
SMTP_TRAFFIC_ALERT_MODE=false

# Security Settings
SESSION_COOKIE_SECURE=true  # Enable for HTTPS in production
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds