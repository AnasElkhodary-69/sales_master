# SalesBreachPro Configuration Template
# ====================================
# Copy this file to .env and update the values for your environment

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=change-this-to-a-secure-secret-key-in-production

# Database Configuration
DATABASE_URL=sqlite:///data/app.db

# FlawTrack API Configuration
FLAWTRACK_API_TOKEN=your-flawtrack-api-token-here
FLAWTRACK_API_ENDPOINT=https://app-api.flawtrack.com/leaks/demo/credentials/
FLAWTRACK_TIMEOUT=30
FLAWTRACK_RETRY_COUNT=3
FLAWTRACK_RATE_LIMIT_PER_MINUTE=60
FLAWTRACK_SCANNING_ENABLED=false

# Brevo (SendinBlue) Email Service Configuration
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=your-sender-email@yourdomain.com
BREVO_SENDER_NAME=Your Company Security Team
BREVO_SUBJECT_PREFIX=[Security Alert]
BREVO_WEBHOOK_URL=https://yourdomain.com/webhooks/brevo
BREVO_WEBHOOK_SECRET=your-webhook-secret-key-here

# Company Configuration
COMPANY_NAME=Your Company Name

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB file upload limit
UPLOAD_FOLDER=uploads
LOG_LEVEL=INFO

# Rate Limiting
DAILY_EMAIL_LIMIT=1000
HOURLY_EMAIL_LIMIT=100
MAX_CONTACTS_PER_UPLOAD=10000

# Security Settings
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds